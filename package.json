{
    "name": "json",
    "version": "4.0.0",
    "author": "Jonas Oberschweiber <jonas@oberschweiber.com>",
    "maintainer": "Michael Hanus <mh@informatik.uni-kiel.de>",
    "synopsis": "A JSON library for Curry",
    "category": [ "Data", "Web" ],
    "license": "BSD-3-Clause",
    "licenseFile": "LICENSE",
    "dependencies": {
        "base"     : ">= 3.0.0, < 4.0.0",
        "det-parse": ">= 3.0.0, < 4.0.0",
        "wl-pprint": ">= 3.0.0, < 4.0.0"
    },
    "exportedModules": ["JSON.Data", "JSON.Parser", "JSON.Pretty", "JSON.Convert"],
    "testsuite": [
        { "src-dir": "src",
          "modules": ["JSON.Parser"]
        },
        { "src-dir": "examples",
          "modules": [ "SimpleTest" ]
        },
        { "src-dir": "test",
          "modules": [ "TestConvert" ]
        }
    ],
    "source": {
        "git": "https://github.com/curry-packages/json.git",
        "tag": "$version"
    }
}
